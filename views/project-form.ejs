<%- include('./header/header.ejs') %>
<link rel="stylesheet" href="/css/project-form.css">
</head>
<body>
<%- include('./header/navbar.ejs') %> 
<div class="container">
    <div class="alert alert-success alert-dismissible fade show <%= success==''?'d-none':'' %>" role="alert">
        <h3 class="text-center"><%= success %></h3>
        <button type="button" class="btn-close mt-2 me-2" data-bs-dismiss="alert" aria-label="Close"></button>
      </div>
    <hr class="pb-2">
    <h1 class="text-center">Project Information</h1>
    <hr class="pt-2 pb-2">
    <form method="POST" action="/user/project-submit">
        <div class="mb-5 ps-4 pe-4 row">
            <div class="col-md-4">
                <label for="name" class="form-label fs-3">Project Name:</label>
            </div>
            <div class="col-md-8">
                <input required minlength="6" name="project-name" type="text" class="form-control <%= error=='projectExists'?'is-invalid':'' %>" id="project-name" placeholder="Enter your project name" value="<%= data.name==""?"":data.name %>">
                <div id="validationServerUsernameFeedback" class="invalid-feedback">
                    Project with this name exists.
                  </div>
            </div>
          </div>
          <div class="mb-5 ps-4 pe-4 row">
            <div class="col-md-4">
                <label for="description" class="form-label fs-3">Project Description:</label>
            </div>
            <div class="col-md-8">
                <textarea required minlength="10" name="project-desc" class="form-control" placeholder="Enter your Project description" id="floatingTextarea2" style="height: 100px"><%= data.description==""?"":data.description %></textarea>
            </div>
        </div>
        <div class="mb-5 ps-4 pe-4 row">
            <div class="col-md-4">
                <label for="catagory" class="form-label fs-3">Project Category:</label>
            </div>
            <div class="col-md-8">
                <input required type="text" minlength="6"  name="project-category" id="project-catagory" class="form-control <%= error=='projectExists'?'is-invalid':'' %>" placeholder="Enter project catagory" value="<%= data.category==""?"":data.category %>">
                <div id="validationServerUsernameFeedback" class="invalid-feedback">
                    Project with this name exists in this category.
                  </div>
            </div>
          </div>
        <div class="mb-5 ps-4 pe-4 row">
            <div class="col-md-4">
                <label for="start" class="form-label fs-3">Project Start:</label>
            </div>
            <div class="col-md-8">
                <input required type="date" name="project-start" id="project-start" class="form-control <%= error=='endBeforeStart'?'is-invalid':'' %>" placeholder="Enter start time" value="<%= data.start==''?'':data.start %>">
                <div id="validationServerUsernameFeedback" class="invalid-feedback">
                    Start date after end date
                  </div>
            </div>
          </div>
          <div class="mb-5 ps-4 pe-4 row">
            <div class="col-md-4">
                <label for="end" class="form-label fs-3">Project End:</label>
            </div>
            <div class="col-md-8">
                <input required type="date" name="project-end" id="project-end" class="form-control <%= error=='endBeforeStart'?'is-invalid':'' %>" placeholder="Enter end time" value="<%= data.end==''?'':data.end %>">
                <div id="validationServerUsernameFeedback" class="invalid-feedback">
                    End date before start date
                  </div>
            </div>
          </div>
          <div class="mb-5 ps-4 pe-4 row">
            <div class="col-md-4">
                <label for="notes" class="form-label fs-3">Project Notes:</label>
            </div>
            <div class="col-md-8">
                <textarea required minLength="10" name="project-notes" class="form-control" placeholder="Enter your Project notes" id="floatingTextarea2" style="height: 100px"><%= data.notes==""?"":data.notes %></textarea>
            </div>
          </div>
          <br>
          
          <div class="mt-3 text-center">
                <input required type="submit" class="btn btn-outline-dark submit-btn" value="Submit Project">
         </div>
    </form>
</div>
<div class="mt-5 pt-5 pb-5 mb-5"></div>
</body>
<%- include('./header/footer.ejs') %> 