<%- include('./header/header.ejs') %>
<link rel="stylesheet" href="/css/project-list.css" />
</head>
<body>
  <%- include('./header/navbar.ejs') %>

  <div class="container">
    <div
      class="alert alert-success alert-dismissible fade show <%= success==''?'d-none':'' %>"
      role="alert"
    >
      <h3 class="text-center"><%= success %></h3>
      <button
        type="button"
        class="btn-close mt-2 me-2"
        data-bs-dismiss="alert"
        aria-label="Close"
      ></button>
    </div>
    <% if(projects.length>0){ %> <% projects.forEach((project,index) => { %>
    <div class="project-container">
      <div class="row">
        <div class="col-md-3">
          <h1>
            <b>Title: </b>
          </h1>
        </div>
        <div class="col-md-8">
          <h1 class="fs-1"><%= project.id.name %></h1>
        </div>
        <div class="col-md-1">
          <form action="/user/delete-project" method="POST">
            <input
              type="hidden"
              name="project-id"
              value="<%= project.id._id.toString() %>"
            />
            <button type="submit" class="btn btn-outline-danger">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                width="16"
                height="16"
                fill="currentColor"
                class="bi bi-trash-fill"
                viewBox="0 0 16 16"
              >
                <path
                  d="M2.5 1a1 1 0 0 0-1 1v1a1 1 0 0 0 1 1H3v9a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2V4h.5a1 1 0 0 0 1-1V2a1 1 0 0 0-1-1H10a1 1 0 0 0-1-1H7a1 1 0 0 0-1 1H2.5zm3 4a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 .5-.5zM8 5a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7A.5.5 0 0 1 8 5zm3 .5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 1 0z"
                />
              </svg>
            </button>
          </form>
        </div>
        <hr />
        <br />
      </div>
      <div class="row">
        <div class="col-md-3">
          <h3>
            <b>Start date: </b>
          </h3>
        </div>
        <div class="col-md-9">
          <h3>
            <%=
            project.id.start.getDate()+'-'+project.id.start.getMonth()+'-'+project.id.start.getFullYear()
            %>
          </h3>
        </div>
      </div>
      <br />
      <div class="row">
        <div class="col-md-3">
          <h3><b>End date: </b></h3>
        </div>
        <div class="col-md-9">
          <h3>
            <%=
            project.id.end.getDate()+'-'+project.id.end.getMonth()+'-'+project.id.end.getFullYear()
            %>
          </h3>
        </div>
      </div>
      <br />
      <div class="row">
        <div class="col-md-3">
          <h3><b>Description:</b></h3>
        </div>
        <div class="col-md-9 para"><h3><%= project.id.description %></h3></div>
      </div>
      <br />
      <div class="row">
        <div class="col-md-3">
          <h3><b>Category:</b></h3>
        </div>
        <div class="col-md-9"><h3><%= project.id.category %></h3></div>
      </div>
      <br />
      <div class="row">
        <div class="col-md-3">
          <h3><b>Notes:</b></h3>
        </div>
        <div class="col-md-9 para"><h3><%= project.id.notes %></h3></div>
      </div>
      <!-- </div> -->
      <!-- <div class="col-md-3">
          <img src="<%= //images[index%4] %>" class="proj-img" />
        </div>
      </div> -->
    </div>
    <% }); %> <% }else{ %>
      <div class="empty-container text-center mt-5 pt-5">
        <div class="col-md-7 m-auto">
          <img src="/assets/img.png" alt="" style="width: 50%;height:50%;margin: auto;">
          <h2 class="mt-4">No projects added.</h2>
          <h2> Add projects to view them here.</h2>
        </div>
      </div>
      <% } %>
  </div>
  <div class="mt-5 mb-5 pt-5"></div>
</body>
<%- include('./header/footer.ejs') %>
