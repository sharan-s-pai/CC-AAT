<%- include('./header/header.ejs') %>
<link rel="stylesheet" href="/css/signup.css">
</head>
<body>
  <main class="d-flex align-items-center">
    <div class="container">
      <div class="card login-card">
        <div class="row no-gutters">
            <div class="col-md-12 login-div">
                <div>
                    <img src="/assets/logo.png" class="logo">
                </div>
                <div class="text-center mt-2 mb-4">
                    <b><h2 class="fs-1">Welcome to Sign up page</h2></b>
                </div>
                <br>
                <form method="POST" action="/sign-up">
                    <div class="mb-5 ps-4 pe-4 row">
                        <hr class="pb-2">
                        <h1>Personal Information</h1>
                        <hr class="pt-2 pb-2">
                        <div class="col-md-4">
                            <label for="name" class="form-label">Name:</label>
                            <input required name="name" type="text" class="form-control" id="name" placeholder="Enter your name">
                        </div>
                        <div class="col-md-4">
                            <label for="email" class="form-label">E-mail:</label>
                            <input required name="email" type="text" class="form-control" id="email" placeholder="Enter your E-mail">
                        </div>
                        <div class="col-md-4">
                            <label for="mob-no" class="form-label">Mobile No.:</label>
                            <input required name="mob-no" type="text" class="form-control" id="mob-no" placeholder="Enter your Mobile No.">
                        </div>
                      </div>
                      <div class="mb-3 ps-4 pe-4">
                        <label for="address" class="form-label">Address:</label>
                        <textarea required name="address" class="form-control" placeholder="Enter your address" id="floatingTextarea2" style="height: 100px"></textarea>
                    </div>
                    <div class="mb-3 ps-4 pe-4 row">
                        <div class="col-md-4">
                            <label for="city" class="form-label">City:</label>
                            <input required name="city" type="text" class="form-control" id="city" placeholder="Enter your city">
                        </div>
                        <div class="col-md-4">
                            <label for="state" class="form-label">State:</label>
                            <input required name="state" type="text" class="form-control" id="state" placeholder="Enter your state">
                        </div>
                        <div class="col-md-4">
                            <label for="country" class="form-label">Country:</label>
                            <input required name="country" type="text" class="form-control" id="country" placeholder="Enter your country">
                        </div>
                      </div>
                      <br>
                      <hr class="pb-2">
                        <div class="row">
                          <div class="col-md-9">
                            <h1>Professional Information</h1>
                          </div>
                          <div class="col-md-3 text-right">
                            <button type="button" class="btn ms-5 btn-outline-dark" id="add-company">+</button>
                          </div>
                      </div>
                        <hr class="pt-2 pb-2">
                      <div id="companies">
                      <div class="mb-3 ps-4 pe-4 row">
                        <div class="col-md-4">
                            <label for="name" class="form-label">Company Name:</label>
                            <input required name="comp-name" type="text" class="form-control" id="comp-name" placeholder="Enter your Company">
                        </div>
                        <div class="col-md-4">
                            <label for="occupation" class="form-label">Occupation:</label>
                            <input required name="occupation" type="text" class="form-control" id="email" placeholder="Enter your Occupation">
                        </div>
                        <div class="col-md-4">
                            <label for="experience" class="form-label">Years of Experience:</label>
                            <select id="year-dropdown" name="experience" class="form-select dropdown-list"></select>
                        </div>
                      </div>
                    </div>
                      <br>
                      <hr class="pb-2 mt-4">
                        <h1>Password Confirmation</h1>
                        <hr class="pt-2 pb-2">
                      <div class="mb-3 ps-4 pe-4 row">
                        <div class="col-md-6">
                          <label for="password">Password:</label>
                          <input required type="password" placeholder="Enter your password" name="password" id="password" class="form-control">
                        </div>
                        <div class="col-md-6">
                          <label for="password">Confirm Password:</label>
                          <input required type="password" placeholder="Confirm your password" name="confirm-password" id="confirm-password" class="form-control">
                        </div>
                      </div>
                      <br>
                      <hr class="pb-3">
                      <div class="mt-3">
                            <input type="submit" class="btn btn-outline-dark login-btn" value="Sign Up">
                     </div>
                </form>
            </div>
        </div>
      </div>
    </div>
  </main>
  <div class="mt-4 pt-4"></div>
  </body>
  <script src="/js/signup.js"></script> 
<%- include('./header/footer.ejs') %>
